#include <iostream>
using namespace std;

int binary_search(int a[], int x, int low, int high, int n, int data) {
    
  while(high >= low)
  {
    int mid = low + (high - low) / 2;

    if (a[mid] == x)
      return mid;

    if (a[mid] > x)
      return binary_search(a, x, low, mid-1, n, data);
    else
      return binary_search(a, x, mid + 1, high, n, data);
  }

  return -1;
}

int main(void) {
  
  int n;
  cout << "Array Size:";
  cin >> n;
  
  int a[n];
  cout << "Array:";
  for(int i=0; i<n; i++){
        cin >> a[i];
    }
    
  int data;
  cout << "Data You Want To Search:";
  cin >> data;
  
  int result = binary_search(a, n, 0, n-1, n, data);
  if (result==-1)
    cout << "Not Found" << endl;
  else
    cout << "Found" << endl;
}
